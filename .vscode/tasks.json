{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "rm -rf ${workspaceFolder}/build ${workspaceFolder}/bin",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && rm -rf build && mkdir build && cd build && cmake .. && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "package",
            "type": "shell",
            "command": "${workspaceFolder}/package.sh",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "build and package",
            "dependsOrder": "sequence",
            "dependsOn": [
                "clean",
                "build",
                "package"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/bin/quadromania",
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "dependsOn": "build and package"
        }
    ]
} 